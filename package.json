{
  "name": "@xjslang/parser",
  "version": "1.0.0",
  "description": "Extended JavaScript language (XJS Language)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./defer": {
      "import": "./dist/esm/defer.js",
      "require": "./dist/cjs/defer.js",
      "types": "./dist/types/defer.d.ts"
    },
    "./mut": {
      "import": "./dist/esm/mut.js",
      "require": "./dist/cjs/mut.js",
      "types": "./dist/types/mut.d.ts"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist",
    "dev": "npm run build -- --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "xjs",
    "parser",
    "language",
    "defer",
    "mut"
  ],
  "author": "XJS Lang Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}
