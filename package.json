{
  "name": "@xjslang/parser",
  "version": "1.0.0",
  "description": "Extended JavaScript language (XJS Language)",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./defer": {
      "import": "./dist/esm/src/defer/index.js",
      "require": "./dist/cjs/src/defer/index.js"
    },
    "./mut": {
      "import": "./dist/esm/src/mut/index.js",
      "require": "./dist/cjs/src/mut/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "babel src index.js --out-dir dist/cjs --env-name cjs",
    "build:esm": "babel src index.js --out-dir dist/esm --env-name esm",
    "clean": "rimraf dist",
    "dev": "node index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "prepublishOnly": "npm run format:check && npm run lint:check && npm run build"
  },
  "keywords": [
    "xjs",
    "parser",
    "language",
    "defer",
    "mut"
  ],
  "author": "XJS Lang Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.0",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0"
  },
  "engines": {
    "node": ">=16"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
